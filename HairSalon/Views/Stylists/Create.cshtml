@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card bg-info my-5">
      <div class="card-body">
        <h4>Add a new Stylist</h4>
        @using (Html.BeginForm())
        {
          <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new{ @class="form-control"})
          </div>
          <div class="form-group">  
            @Html.LabelFor(model => model.Specialty)
            @Html.TextBoxFor(model => model.Specialty, new{ @class="form-control"})
          </div> 
          <div class="form-control"> 
            @Html.LabelFor(model => model.HireDate)
            @Html.TextBoxFor(model => model.HireDate, new{ @class="form-control"})
          </div> 
          <div class="form-control">  
            @Html.LabelFor(model => model.StationAssignment)
            @Html.TextBoxFor(model => model.StationAssignment, new{ @class="form-control"})
          </div>
          <div class="form-control">   
            @Html.LabelFor(model => model.Rent)
            @Html.TextBoxFor(model => model.Rent, new{ @class="form-control"})
          </div>  
          <button type="submit" class="btn btn-light">Add</button>
        }
        <br>
        <p>@Html.ActionLink("Show all Stylists", "Index")</p>
      </div>
    </div>
  </div>
</div>

