@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card bg-info my-5">
      <div class="card-body">
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <hr/>
        <h4>Specialty</h4>
        <p>@Html.DisplayFor(model => model.Specialty)</p>
        <h4>Hire Date</h4>
        <p>@Html.DisplayFor(model => model.HireDate)</p>
        <h4>Chair Assignment</h4>
        <p>@Html.DisplayFor(model => model.StationAssignment)</p>
        <h4>Current Rent</h4>
        <p>@Html.DisplayFor(model => model.Rent)</p>
        <hr/>
        <h3>Clients:</h3>

        @if (Model.Clients.Count == 0)
        {
          <p>This Stylist currently has no Clients.</p>
        }

        @foreach (Client client in @Model.Clients)
        {
          <p>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</p>
        }

        <hr/>

        <p>@Html.ActionLink("Back to List", "Index")</p>
        <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
        <p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
      </div>
    </div>
  </div>
</div>