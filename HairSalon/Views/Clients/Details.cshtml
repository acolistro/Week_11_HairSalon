@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Cuisine
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card bg-info my-5">
      <div class="card-body">
        <h2>Clients with </h2>
        <h2>@Html.DisplayFor(model => model.Name)</h2>
        <hr />

        @if (Model.Clients.Count == 0)
        {
          <p>No Clients of this Stylist.</p>
        }

        @foreach (Client client in @Model.Clients)
        {
          <p>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</p>
        }

        <hr/>

        <p>@Html.ActionLink("Back to List", "Index")</p>
        <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
        <p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
      </div>
    </div>
  </div>
</div>